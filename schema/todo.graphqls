# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

extend type Query {
  todos: [Todo!]! @isAuthenticated
}

input NewTodo {
  text: String!
  userId: ID!
}

extend type Mutation {
  createTodo(input: NewTodo!): Todo!
}

extend type Mutation {
  updateTodo(todoId: ID!, text: String!): Todo!
}

extend type Mutation {
  deleteTodo(todoId: ID!): Boolean!
}
